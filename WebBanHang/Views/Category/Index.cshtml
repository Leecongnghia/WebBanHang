@model List<Category>

<partial name="_Notification" />
<div class="row">
    <div class="col-md-6">
        <h2>List Category</h2>
    </div>
    <div class="col-md-6 text-right">
        <a asp-action="Add" class="btn btn-info">
            <i class="bi bi-plus-circle-fill"></i> Add new </a>
    </div>
</div>

<table class="table table-striped table-hover ">
    <thead>
        <tr class="info">
            <th> Name </th>
            <th> Display Order </th>
            <th> Action </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
            {
                <tr class="active">
                    <td>@x.Name</td>
                    <td>@x.DisplayOrder</td>
                    <td>
                        <a asp-action="Update" asp-route-id="@x.Id" class="btn btn-primary">
                            <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-action="Delete" asp-route-id="@x.Id" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete </a>
                    </td>
                </tr>
            }
    </tbody>
</table>